<div class="article-header" style="background: url(<%= asset_path @article.image %>) no-repeat center center; background-size: cover;">
  <div class="header-content">
    <h1><%= @article.title %></h1>
    <h3 class="article-meta">Written by <%= @article.author.username %> on <%= @article.created_at.strftime("%B %d, %Y") %></h3>
  </div>
</div>

<div class="article-content">
  <p><%= @article.body %></p>
</div>

<% if current_user.admin? %>
  <div class="admin-actions">
    <%= link_to "Edit", edit_admin_article_path(@article), class: "admin-action-button" %>
    <%= link_to "Delete", admin_article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "admin-action-button" %>
  </div>
<% end %>

<div class="comments">
  <h2>Comments</h2>
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>

