<div class="container">
  <div class="row" style="grid-area:main">
    <div class="col-lg-8">
      <%= form_with(model: [:admin, Article.new], html: { class: 'needs-validation', novalidate: '' }) do |form| %>
        <div class="form-group">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', value: @article.title %>
          <% article.errors.full_messages_for(:title).each do |message| %>
            <div class="invalid-feedback"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :body, class: 'form-label' %>
          <%= form.text_area :body, class: 'form-control', value: @article.body %>
          <% article.errors.full_messages_for(:body).each do |message| %>
            <div class="invalid-feedback"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :image, class: 'form-label' %>
          <%= form.text_field :image, class: 'form-control', value: @article.image %>
          <% article.errors.full_messages_for(:image).each do |message| %>
            <div class="invalid-feedback"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :status, class: 'form-label' %>
          <%= form.select :status, ['public', 'private', 'archived'], { selected: 'public' }, { class: 'form-select' } %>
        </div>

        <%= form.hidden_field :author_id, value: current_user.id %>

        <div class="form-group">
          <%= form.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

